# EMYUEL Platform Configuration
# Copy this file to .env and fill in your values

# ==============================================================================
# LLM Provider Configuration
# ==============================================================================

# Primary LLM Provider (openai, gemini, claude)
LLM_PRIMARY_PROVIDER=openai

# Enable automatic fallback to secondary providers
LLM_FALLBACK_ENABLED=true

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.1

# Google Gemini Configuration
GOOGLE_AI_API_KEY=your-google-ai-api-key-here
GEMINI_MODEL=gemini-pro
GEMINI_MAX_TOKENS=4096
GEMINI_TEMPERATURE=0.1

# Anthropic Claude Configuration
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
CLAUDE_MODEL=claude-3-opus-20240229
CLAUDE_MAX_TOKENS=4096
CLAUDE_TEMPERATURE=0.1

# ==============================================================================
# Database Configuration
# ==============================================================================

# PostgreSQL
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=emyuel
POSTGRES_USER=emyuel_user
POSTGRES_PASSWORD=change-this-strong-password

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=change-this-redis-password
REDIS_DB=0

# ==============================================================================
# Application Configuration
# ==============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# API Configuration
API_GATEWAY_PORT=8000
API_GATEWAY_HOST=0.0.0.0
API_VERSION=v1

# JWT Configuration
JWT_SECRET_KEY=change-this-to-a-very-long-random-secret-key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOW_CREDENTIALS=true

# ==============================================================================
# Security Configuration
# ==============================================================================

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Encryption
ENCRYPTION_KEY=change-this-to-32-byte-encryption-key

# ==============================================================================
# Scanner Configuration
# ==============================================================================

# Default scan profile (quick, standard, comprehensive)
DEFAULT_SCAN_PROFILE=standard

# Maximum concurrent scans
MAX_CONCURRENT_SCANS=5

# Scan timeout (seconds)
SCAN_TIMEOUT=3600

# Enable dynamic analysis
DYNAMIC_ANALYSIS_ENABLED=false

# ==============================================================================
# Job Queue Configuration (Celery)
# ==============================================================================

CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2
CELERY_WORKER_CONCURRENCY=4

# ==============================================================================
# Integration Configuration
# ==============================================================================

# Jira Integration
JIRA_ENABLED=false
JIRA_URL=https://your-domain.atlassian.net
JIRA_EMAIL=jira-user@example.com
JIRA_API_TOKEN=your-jira-api-token
JIRA_PROJECT_KEY=SEC

# Slack Integration
SLACK_ENABLED=false
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_CHANNEL=#security-alerts

# Linear Integration
LINEAR_ENABLED=false
LINEAR_API_KEY=your-linear-api-key
LINEAR_TEAM_ID=your-team-id

# ServiceNow Integration
SERVICENOW_ENABLED=false
SERVICENOW_INSTANCE=your-instance.service-now.com
SERVICENOW_USERNAME=your-username
SERVICENOW_PASSWORD=your-password

# ==============================================================================
# SSO Configuration
# ==============================================================================

# Enable SSO
SSO_ENABLED=false

# SAML Configuration
SAML_ENTITY_ID=https://emyuel.example.com
SAML_ACS_URL=https://emyuel.example.com/auth/saml/callback
SAML_IDP_METADATA_URL=https://your-idp.com/metadata

# OIDC Configuration
OIDC_CLIENT_ID=your-oidc-client-id
OIDC_CLIENT_SECRET=your-oidc-client-secret
OIDC_DISCOVERY_URL=https://your-idp.com/.well-known/openid-configuration

# ==============================================================================
# Monitoring & Observability
# ==============================================================================

# Prometheus
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_ENABLED=true
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=change-this-grafana-password

# OpenTelemetry
OTEL_TRACING_ENABLED=false
OTEL_EXPORTER_OTLP_ENDPOINT=http://jaeger:4317

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# ==============================================================================
# Storage Configuration
# ==============================================================================

# File storage for scan results and reports
STORAGE_TYPE=local  # local, s3, gcs, azure
STORAGE_PATH=/var/lib/emyuel/storage

# S3 Configuration (if STORAGE_TYPE=s3)
S3_BUCKET_NAME=emyuel-storage
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=your-aws-access-key
S3_SECRET_ACCESS_KEY=your-aws-secret-key

# ==============================================================================
# Email Configuration
# ==============================================================================

# SMTP Configuration
SMTP_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@example.com
SMTP_PASSWORD=your-email-password
SMTP_FROM_EMAIL=noreply@emyuel.example.com
SMTP_FROM_NAME=EMYUEL Platform

# ==============================================================================
# Compliance & Audit
# ==============================================================================

# Audit log retention (days)
AUDIT_LOG_RETENTION_DAYS=365

# Compliance reporting
COMPLIANCE_REPORTS_ENABLED=true
COMPLIANCE_OWASP_ENABLED=true
COMPLIANCE_PCI_DSS_ENABLED=false
COMPLIANCE_SOC2_ENABLED=false

# ==============================================================================
# Feature Flags
# ==============================================================================

# Enable/disable features
FEATURE_WEBHOOKS_ENABLED=true
FEATURE_API_GRAPHQL_ENABLED=true
FEATURE_MULTI_TENANCY_ENABLED=false
FEATURE_CUSTOM_DETECTORS_ENABLED=false

# ==============================================================================
# Development & Debug
# ==============================================================================

# Debug mode (NEVER enable in production!)
DEBUG=false

# Reload on code changes
AUTO_RELOAD=false

# SQL Query logging
SQL_ECHO=false

# ==============================================================================
# Frontend Configuration
# ==============================================================================

FRONTEND_PORT=3000
FRONTEND_API_URL=http://localhost:8000
